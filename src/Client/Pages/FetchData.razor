@page "/fetchdata"
@using BlazingMongoIddict.Client.Models
@inject HttpClient _http

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (_forecasts == null)
{
	<p><em>Loading...</em></p>
}
else
{
	<table class="table">
		<thead>
			<tr>
				<th>Date</th>
				<th>Temp. (C)</th>
				<th>Temp. (F)</th>
				<th>Summary</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var (dateTime, temperature, summary) in _forecasts)
			{
				<tr>
					<td>@dateTime.ToShortDateString()</td>
					<td>@temperature.Celsius</td>
					<td>@temperature.Fahrenheit</td>
					<td>@summary</td>
				</tr>
			}
		</tbody>
	</table>
}

@code {
	private WeatherForecast[] _forecasts;

	protected override async Task OnInitializedAsync()
	{
		_forecasts = await _http.GetFromJsonAsync<WeatherForecast[]>("WeatherForecast");
	}
}
